<% unless notice.nil? %>
<div class="flashes animated leaveUpAfter10" style="width:100%;height:40px;margin-top:0;position:absolute;z-index:90000;">
  <div class="ui green message animated fadeInDownBig">
    <span><%= notice %></span>
  </div>
</div>
<% end %>
<% unless alert.nil? %>
<div class="flashes animated leaveUpAfter10" style="width:100%;height:40px;margin-top:0;position:absolute;z-index:90000;">
  <div class="ui red message animated fadeInDownBig">
    <span><%= alert %></span>
  </div>
</div>
<% end %>
